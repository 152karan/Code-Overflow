public static int[][] additionnerMat(int[][] mat1, int[][] mat2) {
// test if the same size
int n1 = mat1.length;
int n2 = mat2.length;
int m1 = mat1[0].length;
int m2 = mat2[0].length;
int[][] resu = new int[n1][m1];
if (n1 == n2 && m1 == m2) {
for (int i = 0; i < n1; i++)
for (int j = 0; j < m1; j++)
resu[i][j] = mat1[i][j] + mat2[i][j];
} else {
System.out.println("Different size error");
}
return resu;
}
